@using Fitness.Model
@model Fitness.Model.Entities.LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "登 录";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Index</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        .col-center {
            margin: 0 auto;
            width: 340px;
            border: 1px solid #d8dee2;
            background-color: #fff;
            border-radius: 5px;
            padding-right: 16px !important;
            padding-left: 16px !important; /*优先级高*/
        }

        .form-body {
            padding: 20px;
            font-size: 14px;
        }

        .label-link {
            float: right;
            font-size: 12px;
            border: 1px solid transparent;
        }

        label {
            width: 100%;
        }
    </style>
</head>
<body style="background-color:#f9f9f9;">
    <div class="container">
        <div class="row" style="height:150px;"></div>
    </div>
    <div class="container">
        <div class="col-center">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()//防伪标记，提交窗体时将验证此字段
                    @Html.ValidationSummary(true)
                    <div class="form-body">
                        <div class="form-group" style="margin-bottom:0;">
                            @Html.LabelFor(m => m.UserName, new { @class = "col-md-12 control-label",style="textalign:left" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                        </div>
                        <div class="form-group" style="margin-bottom:0;">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-12 control-label",style="textalign:left" })
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RemeberMe)
                                    @Html.LabelFor(m => m.RemeberMe)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" style="background-color:green;color:#fff;"value="登录"class="btnbtndefaultcolmd-12" />
                            </div>
                        </div>
                        <p>
                            @Html.ActionLink("注册", "Register") 如果没有本站账号。
                        </p>
                    </div>
                }
            </section>
        </div>
    </div>
</body>
</html>
